{
  "name": "face-recognition-app",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc --project tsconfig.json",
    "lint": "tsc --noEmit",
    "test": "echo \"Add tests under /tests when ready\" && exit 0",
    "dev:web": "npm --prefix web run dev",
    "build:web": "npm --prefix web run build",
    "preview:web": "npm --prefix web run preview"
  },
  "keywords": ["face-recognition", "computer-vision", "webcam"],
  "author": "",
  "license": "ISC",
  "description": "A customizable face recognition app that runs on Mac with real-time camera tracking",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
